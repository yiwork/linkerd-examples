{
  "id": "linkerd",
  "instances": 1,
  "cpus": 0.25,
  "mem": 512.0,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "buoyantio/linkerd:1.6.3",
      "network": "HOST",
      "privileged": true
    }
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": 0,
      "path": "/admin/ping",
      "gracePeriodSeconds": 5,
      "intervalSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "portDefinitions": [
    {
      "port": 9990,
      "protocol": "tcp",
      "name": "admin"
    },
    {
      "port": 4140,
      "protocol": "tcp",
      "name": "proxy"
    }
  ], 
  "requirePorts": true,
  "cmd": "cat /config.yml | /io.buoyant/linkerd/1.4.6/bundle-exec -log.level=DEBUG -- -"
}
